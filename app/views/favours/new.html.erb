<%= form_for @favour do |f| %> 
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :location %>
	<%= f.text_field :location %>

	<%= f.submit "SPOT ME" %>

	<%= link_to "New Favour", new_favour_path %>
	<%= link_to "Current FAVOURS", favours_path %>
	<%= link_to "LEGENDS", users_path %>
<% end %>