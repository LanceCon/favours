<h1>FAVOURS - SPOT ME</h1>

<table>
  <thead>
    <tr>
      <th>THE FAVOUR</th>
      <th>THE MISSION</th>
      <th>THE LOCATION</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favours.each do |favour| %>
      <tr>
        <td><%= favour.title %></td>
        <td><%= favour.description %></td>
        <td><%= favour.location %></td>
        <td><%= link_to "accept", new_favour_acceptance_path(favour) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Favour", new_favour_path %>
<%= link_to "LEGENDS", users_path %>
<%= link_to "Current FAVOURS", favours_path %>
